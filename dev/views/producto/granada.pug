        img.prueba-tambien__imagen(src='./../img/productos/jamaica.png')
      a.prueba-tambien__link(href='./lima.html')
        p.prueba-tambien__titulo Lima
        img.prueba-tambien__imagen(src='./../img/productos/lima.png')
      a.prueba-tambien__link(href='./lychee.html')
        p.prueba-tambien__titulo Lychee
        img.prueba-tambien__imagen(src='./../img/productos/lychee.png')
      a.prueba-tambien__link(href='./mandarina.html')
